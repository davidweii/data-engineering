= form_for @invoice do |f|
  - if @invoice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice.errors.count, "error")} prohibited this invoice from being saved:"
      %ul
        - @invoice.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :purchaser_name, 'Purchaser Name'
    = f.text_field :purchaser_name
    %br
    = f.label :item_description, 'Item Description'
    = f.text_field :item_description
    %br
    = f.label :item_price, 'Item Price'
    = f.number_field :item_price
    %br
    = f.label :purchase_count, 'Purchase Count'
    = f.number_field :purchase_count
    %br
    = f.label :merchant_address, 'Merchant Address'
    = f.text_field :merchant_address
    %br
    = f.label :merchant_name, 'Merchant Name'
    = f.text_field :merchant_name
  .actions
    = f.submit 'Save'
